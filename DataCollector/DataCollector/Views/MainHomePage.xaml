<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataCollector.Views.MainHomePage"
             Title="Data Collector">
    <ContentPage.ToolbarItems>
        <!--<ToolbarItem Text=":"
                     Priority="Pri"
                     Icon="menuImage.png"
                     Command="{Binding TBMenuCommand}"></ToolbarItem>-->
        <ToolbarItem Priority="0"
                     Order="Secondary"
                     Text="IP Setting"                      
                     Command="{Binding TBMenuCommand}"
                     CommandParameter="1"/>
        <ToolbarItem Priority="0"                      
                     Order="Secondary"
                     Text="Main Settings"
                     Command="{Binding TBMenuCommand}"
                     CommandParameter="2"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"
                     Margin="10">
            <Image Source="dataCollectorImage.png"
                   HorizontalOptions="CenterAndExpand"
                   HeightRequest="50"/>
            <Label Text="Data Collector"
                   FontSize="Large"
                   TextColor="Black"
                   HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>