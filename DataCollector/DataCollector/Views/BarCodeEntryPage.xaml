<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataCollector.Views.BarCodeEntryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="MCode:"/>
            <Entry Text="{Binding SelectedOrderProd.MCODE}"
                   TextChanged="Entry_TextChanged" />
            <Label Text="Voucher No:"/>
            <Entry Text="{Binding SelectedOrderProd.VCHRNO, Mode=TwoWay}"
                   IsEnabled="False"
                   />
            <Label Text="Rate:"/>
            <Entry Text="{Binding SelectedOrderProd.RATE}"
                   IsEnabled="False"
                   />
            <Label Text="BarCode:"/>
            <Entry Text="{Binding SelectedOrderProd.BARCODE}"
                   IsEnabled="False"
                   />
            <Label Text="Quantity:"/>
            <Entry Text="{Binding SelectedOrderProd.QUANTITY}"
                   IsEnabled="False"
                  />
            <Label Text="SupplierCode:"/>
            <Entry Text="{Binding SelectedOrderProd.SUPPLIERCODE}"
                   IsEnabled="False"
                   />

            <Button Text="Add" 
                    Command="{Binding AddCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>