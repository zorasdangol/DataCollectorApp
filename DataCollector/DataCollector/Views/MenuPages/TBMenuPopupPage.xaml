                    Command="{Binding TBMenuCommand}"
                    CommandParameter="2"
                    Text="Developer Settings"/>
            <Button BackgroundColor="Transparent" 
                    Margin="0"
                    Command="{Binding TBMenuCommand}"
                    CommandParameter="3"
                    Text="IP Setting"/>
        </StackLayout>-->
    </Frame>
</pages:PopupPage>


